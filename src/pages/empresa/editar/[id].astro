---
import Layout from "../../../layouts/Layout.astro";

import { tursodb } from "../../../../astro.config.mjs";
import Header from "../../../components/Header.astro";
import Footer from "../../../components/Footer.astro";
import FormElement from "../../../components/FormElement.astro";
import Contacts from "../../../components/Contacts.astro";
import BackBtn from "../../../components/BackBtn.astro";

const { id } = Astro.params;

/* const { rows } = await tursodb.execute({
    sql: `SELECT * FROM empresa WHERE empresa_id = $id;`,
    args: {

let rows = [
    {
        empresa_id: 1,
        nombre: "IES EL pla CRM",
        nombre_oficial: "FEPLA-CRM2",
        direccion: "Calle 12",
        cif: "B12345678",
        sitio_web: "https://fepla.com",
        sector: "Tecnologiaaaa",
        tecnologias: "js, rust",
        comentarios: "bluh bluh bluh",
        fecha_creacion: "2023-01-01",
        fecha_actualizacion: null,
        contacto_id: 1,
    },
];

const empresa = rows[0];
/* empresa_id, nombre, nombre_oficial, direccion, cif, sitio_web, sector, tecnologias, comentarios, fecha_creacion, fecha_actualizacion, contacto_id */
---

<Layout title="Modificación de la empresa" kind={1}>
    <Header />
    <main class="flex justify-center items-center grid-flow-col gap-10">
        <!-- class="flex flex-col gap-4 m-5" -->
        <form
            class="bg-gray-300 rounded-lg shadow-md w-fit py-10 px-8 flex flex-col"
            id="formnew"
        >
            <fieldset class="grid grid-cols-2 grid-rows gap-2 py-5 px-4">
                <legend
                    class="ms-4 px-1.5 bg-[#476683] rounded-md text-white text-center text-2xl font-semibold"
                >
                    Modificación de una empresa:
                    <span id="empresa_id">{empresa.empresa_id}</span>
                </legend>
                <FormElement
                    texto="nombre"
                    placehold={empresa.nombre}
                    value={empresa.nombre}
                />
                <FormElement
                    texto="nombre_oficial"
                    placehold={empresa.nombre_oficial}
                    value={empresa.nombre_oficial}
                />
                <FormElement
                    texto="direccion"
                    placehold={empresa.direccion}
                    value={empresa.direccion}
                />
                <FormElement
                    texto="cif"
                    placehold={empresa.cif}
                    value={empresa.cif}
                />
                <FormElement
                    texto="sitio_web"
                    placehold={empresa.sitio_web}
                    value={empresa.sitio_web}
                />
                <FormElement
                    texto="sector"
                    placehold={empresa.sector}
                    value={empresa.sector}
                />
                <FormElement
                    texto="tecnologias"
                    placehold={empresa.tecnologias}
                    value={empresa.tecnologias}
                />
                <FormElement
                    texto="comentarios"
                    placehold={empresa.comentarios}
                    value={empresa.comentarios}
                    type="textarea"
                />
            </fieldset>
            <button
                type="submit"
                id="btnsubmit"
                class="bg-blue-700 hover:bg-blue-800 text-white rounded-lg text-sm px-2 py-2 transition-colors mx-auto"
                >Modificar empresa</button
            >
            <BackBtn />
        </form>
        <!-- grid grid-cols-2 grid-rows-5 -->
        {
            empresa.contacto_id ? (
                <Contacts />
            ) : ""
        }
    </main>
    <Footer />
</Layout>

<script>
    const form = document.querySelector("#formnew") as HTMLFormElement;
    const emp_id = document.querySelector("#empresa_id");
    const url = "http://localhost:4321/api/modifyinfo";

    form.addEventListener("submit", (e) => {
        e.preventDefault();
        const data = {
            empresa_id: emp_id.textContent,
            nombre: form.nombre.value,
            nombre_oficial: form.nombre_oficial.value,
            direccion: form.direccion.value,
            cif: form.cif.value,
            sitio_web: form.sitio_web.value,
            sector: form.sector.value,
            tecnologias: form.tecnologias.value,
            comentarios: form.comentarios.value,
            /* fecha_actualizacion: new Date(), */
        };
        fetch(url, {
            method: "PUT",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify(data),
        })
            .then((response) => response.json())
            .then((json) => alert(json.msg));
    });
</script>
